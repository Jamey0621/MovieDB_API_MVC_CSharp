@{
}
<link rel="stylesheet" href="~/css/site.css" />

<style>
    body {
        background-image: url("https://image.tmdb.org/t/p/w500/@Model.backdrop_path");
        background-repeat: no-repeat;
        background-size: cover;
        
    }

    
</style>

<div class="card mb-2 card">
    <h3 class="card-header">@Model.title</h3>
    <div class="card-body">
        <h5 class="card-title"> Release Date:@Model.release_date </h5>
        <h6 class="card-subtitle text-muted">Buget:$@Model.budget |||              Reevenue:@Model.revenue</h6>
        <img class="img-fluid" x="50%" y="50%" src="https://image.tmdb.org/t/p/w500/@Model.poster_path">

    </div>
    <div class="card-body">
        <p class="card-text">@Model.overview</p>
    </div>
    <ul class="list-group-horizontal" style="text-align: center; background-color: black; color: white;">
        @foreach (var item in Model.genres)
        {
            <li class="list-group-horizontal-sm">@item.name</li>
        }

    </ul>
    <div class="card-footer">
    <p class="page-link"> Click <a class="btn mr-2" asp-area="" asp-controller="Movie" asp-action="SimilarMovie" asp-route-id="@Model.id">Here</a> to see similar movies! </p>
    <p class="page-link"> Click <a class="btn mr-2" asp-area="" asp-controller="Movie" asp-action="Reviews" asp-route-id="@Model.id">Here</a> to see what people are saying! </p>
    </div>

</div>


