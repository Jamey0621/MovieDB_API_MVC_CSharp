@model MyMovieApp.Models.PopularMovieModel.Root
@{
    ViewData["Title"] = "Popular Movies";
}

<link rel="stylesheet" href="~/css/MainIndex.css" />

<div class="text-center">
    <h1 class="display-4 align-self-md-center" style="color: white;">This is what is popular right now!</h1>
 
</div>

<div class="flex-container">
    <div class="row row-cols-1 row-cols-md-2 g-5">

        @foreach (var item in Model.results)
        {




            <div class="col-md-4">
                <div class="h-50">
                    <div class="card" style="width: 18rem;">
                        <img src="https://image.tmdb.org/t/p/w500/@item.poster_path" class="card-img-top" alt="...">

                        <div class="card-body">
                            <h5 class="card-title">@item.title</h5>
                            <a class="btn mr-2" asp-area="" asp-controller="Movie" asp-action="Details" asp-route-id="@item.id">Details</a>
                        </div>


                    </div>
                </div>
            </div>


        }
    </div>
</div>


